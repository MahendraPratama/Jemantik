<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/list_namaKK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumarno Susilo bbang Syuyudono"
            android:layout_gravity="center_vertical"
            android:textSize="10pt"
            android:textStyle="bold"
            android:layout_weight="1"
            android:maxLines="1"
            android:fontFamily="casual"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/list_noKK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:text="300892019283"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">
        <Button
            android:layout_toLeftOf="@id/btnDelKK"
            android:id="@+id/btnEdtKK"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="edit"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_outline_black"
            android:fontFamily="casual"
            />
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btnDelKK"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="delete"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_outline_black"
            android:fontFamily="casual"
            />

    </RelativeLayout>

</LinearLayout>