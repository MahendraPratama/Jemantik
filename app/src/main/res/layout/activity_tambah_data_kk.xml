<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jentiknyamuk.mpdev.jentiknyamuk.TambahDataKKActivity">
    <include layout="@layout/app_bar_layout"
        android:id="@+id/tambahkk_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tambahkk_toolbar"
        android:layout_above="@id/btn_simpan_data_kk">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/tambah_no_kk"
                style="@style/EditText_Tambah_KK"
                android:hint="Nomor KK"
                android:inputType="number"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/tambah_nama_kk"
                android:layout_below="@id/tambah_no_kk"
                style="@style/EditText_Tambah_KK"
                android:hint="Nama Kepala Keluarga"
                android:inputType="textPersonName"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/tambah_alamat_kk"
                android:layout_below="@id/tambah_nama_kk"
                style="@style/EditText_Tambah_KK"
                android:inputType="text"
                android:hint="Alamat"
                android:maxLines="3"
                />
            <EditText
                android:id="@+id/tambah_kelurahan_kk"
                android:layout_below="@id/tambah_alamat_kk"
                style="@style/EditText_Tambah_KK"
                android:inputType="text"
                android:hint="Kelurahan"
                android:maxLines="1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tambah_kelurahan_kk"
                style="@style/EditText_Tambah_KK"
                android:weightSum="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tambah_rt_kk"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:hint="RT"
                    android:inputType="number"
                    android:fontFamily="casual"
                    android:maxLines="1"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/tambah_rw_kk"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:hint="RW"
                    android:inputType="number"
                    android:fontFamily="casual"
                    android:maxLines="1"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>







    <Button
        android:id="@+id/btn_simpan_data_kk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SIMPAN"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

</RelativeLayout>
