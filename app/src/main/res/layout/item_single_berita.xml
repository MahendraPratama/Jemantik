<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/list_gambarberita"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/placeholder_berita_jemantik"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/list_judulberita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textStyle="bold"
            android:text="Jentik Nyamuk di Semarang Makin Bertambah"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:layout_below="@id/list_judulberita"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:textColor="#000"
            android:text="Baca Selengkapnya.."
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>